	string
	default "E3C246D4I"

config CBFS_SIZE
	hex
	default 0x800000

config CONSOLE_POST
	bool
	default y

config ONBOARD_VGA_IS_PRIMARY
	bool
	default y

# 0 - 0x3f8: physical COM1 port
# 1 - 0x2f8: SOL console on BMC
config UART_FOR_CONSOLE
	int
	default 1

config MAX_CPUS
	int
	default 16

config DIMM_MAX
	int
	default 4

